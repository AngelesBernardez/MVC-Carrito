@model IEnumerable<B_G2_CarritoCompras.Models.Carrito>

@{
    ViewData["Title"] = "Carritos";
}

<h1>Carritos</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Usuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ItemsCompra)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Usuario.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ItemsCompra.Count)
            </td>
            <td>
                @*<a asp-action="Edit" asp-route-id="@item.CarritoId">Edit</a> |*@
                <a asp-action="Details" asp-route-id="@item.CarritoId">Details</a>
                @*<a asp-action="Delete" asp-route-id="@item.CarritoId">Delete</a>*@
            </td>
        </tr>
        }
    </tbody>
</table>
