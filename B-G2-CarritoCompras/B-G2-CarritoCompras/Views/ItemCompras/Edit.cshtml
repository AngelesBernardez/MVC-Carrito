@model B_G2_CarritoCompras.Models.ItemCompra

@{
    ViewData["Title"] = "Modificar cantidad de Producto";
}

<h4>Modificar Producto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ItemCompraId" />
            <input type="hidden" asp-for="CarritoId" />
            <input type="hidden" asp-for="ProductoId" />

            <div class="form-group">
                <h4>@Model.Producto.Nombre</h4>
            </div>
            <p>Stock: @Model.Producto.Stock u.</p>
            <div class="form-group">
                <label asp-for="Cantidad" class="control-label"></label>
                <input asp-for="Cantidad" class="form-control" value="@Model.Cantidad" />
                <span asp-validation-for="Cantidad" class="text-danger"></span>

            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Productos">Volver a Productos</a> |
    <a asp-action="Index" asp-controller="Carritos">Ir al Carrito</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
