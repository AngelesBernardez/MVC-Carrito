@model B_G2_CarritoCompras.Models.Usuario

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Usuario</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Apellido)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Apellido)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ComprasRealizadas)
        </dt>
    </dl>
    @if (Model.ComprasRealizadas.Count() == 0)
    {
        <p>No hay compras realizadas.</p>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Fecha
                    </th>
                    <th>
                        Precio Final (IVA incluído)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ComprasRealizadas)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Fecha)
                        </td>
                        <td>
                            $@Html.DisplayFor(modelItem => item.PrecioFinal)
                        </td>
                        <td>
                            <a asp-action="Details" asp-controller="Compras" asp-route-id="@item.CompraId">Detalle</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Editar</a> |
    <a asp-action="Index">Volver a la lista</a>
</div>
